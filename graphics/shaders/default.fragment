uniform vec4 fill;
uniform vec4 stroke;
uniform vec4 tint;

uniform int useColor;
uniform int useTexture;

uniform sampler2D tex0;

in vec4 vColor;
in vec2 vTexCoords;

void main() {
    if (useColor == 1)
        gl_FragColor = vColor;
    else if (useTexture == 1) 
        gl_FragColor = texture2D(tex0, vTexCoords) * tint;
    else
        gl_FragColor = fill;
}
