attribute vec3 vertex;
attribute vec2 texCoords;

uniform vec4 matrixModel;
uniform vec4 matrixProjection;

varying vec2 vTexCoords;

void main() {
    gl_Position = vec4(
        (vertex.x * matrixModel.x + matrixProjection.x) / matrixProjection.z,
        (vertex.y * matrixModel.y + matrixProjection.y) / matrixProjection.w,
        1.,
        1.);
    
    vTexCoords = texCoords;
}
